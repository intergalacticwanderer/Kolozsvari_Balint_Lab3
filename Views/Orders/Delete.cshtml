@model Kolozsvari_Balint_Lab2.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h4>Order</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Customer)</dt>
        <dd class="col-sm-10">@Model.Customer?.Name</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book)</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="OrderID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>